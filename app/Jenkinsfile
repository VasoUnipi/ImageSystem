pipeline {
    agent any
    stages {
        stage('Build Image') {
            steps {
                dir('app') {
                    sh 'docker build -t jenkins-flaskapp .'
                }
            }
        }
        stage('Run App') {
            steps {
                sh 'docker-compose up -d'
            }
        }
        stage('Check App') {
            steps {
                sh 'sleep 5 && curl -f http://localhost:5000 || exit 1'
            }
        }
    }
}
